# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Deepgram (STT & TTS)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AWS Bedrock (LLM)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Model Options (uncomment one):
# Budget option (cheapest):
AWS_BEDROCK_MODEL_ID=deepseek.deepseek-r1-distill-qwen-32b

# Other options:
# AWS_BEDROCK_MODEL_ID=deepseek.deepseek-v3                        # Latest DeepSeek (if available)
# AWS_BEDROCK_MODEL_ID=deepseek.deepseek-r1-distill-llama-70b      # Balanced
# AWS_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0   # Premium (20x cost)

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_voice

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Twilio (for phone support - optional for now)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Salesforce (for production integration)
SF_CLIENT_ID=
SF_CLIENT_SECRET=
SF_REFRESH_TOKEN=
SF_INSTANCE_URL=

# Security
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Call Settings
MAX_CALL_DURATION_SECONDS=7200
CALL_RECORDING_ENABLED=true
